<% if @user.errors.any? %>
  <h3> Errors </h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@user] do |f| %>
  <p><%= f.label :name %> <%= f.text_field :name %></p>
  <p><%= f.label :department %> <%= f.collection_select(:department_id, Department.all, :id, :name, prompt: true ) %></p>
  <p><%= f.label :role %> <%= f.collection_select(:role_id, Role.all, :id, :name, prompt: true ) %></p>
  <p><%= f.submit "Submit" %></p>

<% end %>
