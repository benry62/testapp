<% if @department.errors.any? %>
  <h3> Errors </h3>
  <ul>
    <% @department.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>


<%= form_for [@school, @department] do |f| %>

  <p><%= f.label :name %> <%= f.text_field :name %></p>
  <p><%= f.submit "submit" %>
  <p><%= f.hidden_field(:school_id, :value=> @school.id) %> </p>

<% end %>
