<h1>Students</h1>

<% unless @student.first.nil?  %>
<h2><%= @student.first.school.last_name %></h2>
    <% @student.each do |t| %>
      <p><%= link_to (t.fore_name + " " + t.last_name), edit_school_student_path(:id => t.id) %> | <%= t.form %>  </p>
    <% end %>
  <% else %>
  <h2> This school has no students </h2>
  <% end %>
