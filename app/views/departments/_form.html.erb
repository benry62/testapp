<% if @department.errors.any? %>
  <h3> Errors </h3>
  <ul>
    <% @department.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @department do |f| %>
  <p><%= f.label :name %> <%= f.text_field :name %></p>
  <p><%= f.collection_select(:school_id, School.all, :id, :name, prompt: true ) %></p>
  <p><%= f.submit "submit" %>

<% end %>
